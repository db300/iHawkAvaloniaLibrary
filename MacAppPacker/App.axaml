<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MacAppPacker.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
    <Application.Name>MacAppPacker</Application.Name>
    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="About MacAppPacker" Click="NativeMenuAbout_Click"/>
        </NativeMenu>
    </NativeMenu.Menu>
</Application>